{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Test",
      "type": "shell",
      "command": "./.vscode/test.sh",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "windows": {
        "options": {
          "shell": {
            "executable": "C:\\Windows\\System32\\wsl.exe"
          }
        }
      },
      "args": [
        "${fileBasename}"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Submit",
      "type": "shell",
      "command": "./.vscode/submit.sh",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "windows": {
        "options": {
          "shell": {
            "executable": "C:\\Windows\\System32\\wsl.exe"
          }
        }
      },
      "args": [
        "${fileBasename}"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "Run",
      "type": "shell",
      "command": "./.vscode/run.sh",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "windows": {
        "options": {
          "shell": {
            "executable": "C:\\Windows\\System32\\wsl.exe"
          }
        }
      },
      "args": [
        "${fileBasename}",
        "${input:sample-no}"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "sample-no",
      "description": "Sample No. to run:",
      "type": "promptString"
    }
  ]
}